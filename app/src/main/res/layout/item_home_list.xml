<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="2dp"
        android:text="时间：昨天 00:32"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_left_ic"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_home_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_home_left_ic"
            android:background="@drawable/home_shape_bg_left"
            android:padding="8dp"
            android:paddingTop="10dp"
            android:text="你好！！！"
            android:textColor="#FFFFFFFF"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_home_right_ic"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_home_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_home_right_ic"
            android:layout_toStartOf="@+id/iv_home_right_ic"
            android:background="@drawable/home_shape_bg_right"
            android:padding="8dp"
            android:paddingTop="10dp"
            android:text="你好你好你好你好！！！"
            android:textColor="#FFFFFFFF"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>